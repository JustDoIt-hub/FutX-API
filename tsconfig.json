{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                         // Needed for paths
    "paths": {
      "@shared/*": ["shared/*"]            // Aliasing shared
    },
    "outDir": "dist",
    "resolveJsonModule": true              // Optional but useful
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
